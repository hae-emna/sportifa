{% extends 'backbase.html.twig' %}

{% block title %}Hello DashboardController!{% endblock %}

{% block body %}

{{form_start(form)}}
<div class="example-wrapper">
    <div class="container rounded bg-white mt-5 mb-5">
    <div class="row">
        <div class="col-md-3 border-right">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img class="rounded-circle mt-5" width="150px" src="{{ asset('uploads_directory/' ~ app.user.image) }}"><span class="font-weight-bold">{{app.user.firstName ~ ' ' ~ app.user.lastName}}</span><span class="text-black-50">{{app.user.email}}</span><span> </span></div>
            <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                {{ form_row(form.image) }}
            </div>
        </div>
        <div class="col-md-5 border-right">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right">Profile Settings</h4>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6">
                    {{form_row(form.firstname, {'attr' : {'class' : 'form-control'}})}}
                    </div>
                    <div class="col-md-6">
                    {{form_row(form.lastname, {'attr' : {'class' : 'form-control'}})}}
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-12">
                        {{ form_row(form.phoneNumber, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="col-md-12">
                        {{ form_row(form.age, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="mt-5 text-center"><button class="btn btn-primary profile-button" type="submit">Save Profile</button>
                <a href="{{path('profile_delete')}}"><button class="btn btn-danger profile-button" type="button">Delete Profile</button></a></div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="text-right">â €</h4>
                </div>
                <div class="col-md-12">
                {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
                </div> <br>
                <div class="col-md-12">
                {{ form_row(form.bio, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </div>
    </div>
</div>
</div>
</div>
</div>
{{form_end(form)}}
{% endblock %}
